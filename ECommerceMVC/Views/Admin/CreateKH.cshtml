@model ECommerceMVC.Data.KhachHang
@{
    ViewData["Title"] = "Thêm khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h3 class="text-primary mb-4">Thêm Khách Hàng</h3>
    <form asp-action="CreateKH" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="MaKh" class="form-label">Tên đăng nhập</label>
                <input asp-for="MaKh" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="HoTen" class="form-label">Họ tên</label>
                <input asp-for="HoTen" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                <input asp-for="MatKhau" class="form-control" type="password" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DienThoai" class="form-label">Điện thoại</label>
                <input asp-for="DienThoai" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                <input asp-for="NgaySinh" class="form-control" type="date" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Giới tính</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" />
                    <label class="form-check-label">Nam</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="GioiTinh" value="false" />
                    <label class="form-check-label">Nữ</label>
                </div>
            </div>

            <div class="col-md-6 form-check mb-3">
                <input asp-for="HieuLuc" class="form-check-input" type="checkbox" />
                <label asp-for="HieuLuc" class="form-check-label">Kích hoạt</label>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Thêm mới</button>
        <a asp-action="KH" class="btn btn-secondary">Hủy</a>
    </form>
</div>
