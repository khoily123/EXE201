<div class="text-center mt-4">
    <img src="@ViewBag.QRCodeUrl" alt="QR Code thanh toán" class="img-fluid" style="max-width: 300px;" />
    <p class="mt-3">💬 Nội dung chuyển khoản: <strong>@ViewBag.Content</strong></p>
    <h4 class="text-success">💰 Tổng tiền: @ViewBag.Total.ToString("N0") VND</h4>

    <div class="mt-4">
        <a href="@Url.Action("CancelOrder", "Cart")" class="btn btn-outline-danger">❌ Hủy đơn hàng</a>
        <a href="@Url.Action("ConfirmPayment", "Cart")" class="btn btn-primary ms-2">✅ Tôi đã thanh toán</a>
    </div>
</div>
