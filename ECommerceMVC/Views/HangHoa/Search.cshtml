@model ECommerceMVC.ViewModels.HangHoaPagingVM

@{
	ViewData["Title"] = "Search";
	Layout = "_DanhSachHangHoa";
}

<h3>Kết quả tìm kiếm cho <i>@ViewBag.Keyword</i> : <b> @Model.TotalItems</b> sản phẩm</h3>

@await Html.PartialAsync("ProductItem", Model.Items)

<!-- Phân trang -->
<div class="col-12">
	<div class="pagination d-flex justify-content-center mt-5">
		@if (Model.CurrentPage > 1)
		{
			<a class="rounded" href="@Url.Action("Search", new { keyword = ViewBag.Keyword, page = Model.CurrentPage - 1 })">&laquo;</a>
		}

		@for (int i = 1; i <= Model.TotalPages; i++)
		{
			<a class="rounded @(i == Model.CurrentPage ? "active" : "")"
			   href="@Url.Action("Search", new { keyword = ViewBag.Keyword, page = i })">@i</a>
		}

		@if (Model.CurrentPage < Model.TotalPages)
		{
			<a class="rounded" href="@Url.Action("Search", new { keyword = ViewBag.Keyword, page = Model.CurrentPage + 1 })">&raquo;</a>
		}
	</div>
</div>
