@{
    ViewData["Title"] = "Bảng Điều Khiển Nhà Cung Cấp";
    var tenDangNhap = Context.Session.GetString("TenDangNhap");
    Layout = "~/Views/Shared/_LayoutNCC.cshtml";

}

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h4 class="mb-0">Xin chào, @tenDangNhap!</h4>
        <p class="mb-0">Chào mừng bạn đến với bảng điều khiển Nhà Cung Cấp.</p>
    </div>
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Tổng số đơn</h5>
                    <h3 class="card-text">@ViewBag.TongDonHang</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Tổng số sản phẩm</h5>
                    <h3 class="card-text">@ViewBag.TongSanPham</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-info">
                <div class="card-body">
                    <h5 class="card-title text-info">Tổng doanh thu</h5>
                    <h3 class="card-text">@ViewBag.TongDoanhThu</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Đơn chờ xác nhận</h5>
                    <h3 class="card-text">@ViewBag.DonChoXacNhan</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-dark">
                <div class="card-body">
                    <h5 class="card-title text-dark">Sản phẩm bán chạy nhất</h5>
                    <p class="card-text">@ViewBag.SPBanChay</p>
                </div>
            </div>
        </div>
    </div>


 </div>
