<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Nhà Cung Cấp</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-ncc {
            background-color: #2c3e50;
        }

            .navbar-ncc .navbar-brand,
            .navbar-ncc .nav-link,
            .navbar-ncc .dropdown-item {
                color: #ecf0f1 !important;
            }

                .navbar-ncc .nav-link:hover,
                .navbar-ncc .dropdown-item:hover {
                    color: #f39c12 !important;
                }

        .content-wrapper {
            min-height: 80vh;
            background-color: #ffffff;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        footer {
            padding: 1rem 0;
            text-align: center;
            color: #666;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-ncc mb-4">
        <div class="container">
            <a class="navbar-brand" asp-controller="NhaCungCap" asp-action="Dashboard">
                <i class="fas fa-store"></i> Quản Trị NCC
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nccNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nccNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SanPham" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DonHang" asp-action="Index">Đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TaiKhoanNhaCungCap" asp-action="ThongTin">Tài khoản</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <a class="btn btn-outline-light" asp-controller="TaiKhoanNhaCungCap" asp-action="DangXuat">
                        <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                    </a>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="mt-4">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - Hệ thống quản lý Nhà Cung Cấp</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
